# Example values for prod
aws_region     = "us-east-1"
aws_account_id = "123456789012"
env            = "prod"
vpc_cidr       = "10.50.0.0/16"

availability_zones = ["us-east-1a", "us-east-1b"]
public_subnets      = ["10.50.1.0/24", "10.50.2.0/24"]
private_subnets     = ["10.50.11.0/24", "10.50.12.0/24"]

api_domain = "sports-api.your-domain.com"
route53_zone_id = "Z1234567890"
acm_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/replace-with-your-cert-id"
email_provider = "gmail"
gmail_user = "your-email@gmail.com"
email_from = "no-reply@your-domain.com"

