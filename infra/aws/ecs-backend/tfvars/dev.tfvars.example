# Example values for dev
aws_region     = "us-east-1"
aws_account_id = "123456789012"
env            = "dev"
vpc_cidr       = "10.10.0.0/16"

availability_zones = ["us-east-1a", "us-east-1b"]
public_subnets      = ["10.10.1.0/24", "10.10.2.0/24"]
private_subnets     = ["10.10.11.0/24", "10.10.12.0/24"]

api_domain = "sports-dev-api.your-domain.com"
apigw_cors_allowed_origins = ["https://sports-dev.your-domain.com"]
route53_zone_id = "Z1234567890"
acm_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/replace-with-your-cert-id"
alb_access_logs_bucket_name = "as-dev-123456789012-alb-logs"
email_provider = "gmail"
gmail_user = "your-email@gmail.com"
email_from = "no-reply@your-domain.com"

# Redis (required when transit encryption is enabled)
redis_auth_token = "replace-with-strong-token"

# Observability
# alarm_sns_topic_arn = "arn:aws:sns:us-east-1:123456789012:alerts"

# Optional per-service sizing
# service_cpu_map = { "identity-service" = 512 }
# service_memory_map = { "identity-service" = 1024 }
