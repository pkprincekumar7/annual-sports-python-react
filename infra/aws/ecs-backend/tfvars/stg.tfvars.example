# Example values for stg
aws_region     = "us-east-1"
aws_account_id = "123456789012"
cluster_name   = "annual-sports-stg"
vpc_cidr       = "10.30.0.0/16"
name_prefix    = "as-stg"
service_discovery_namespace = "annual-sports.stg.local"

availability_zones = ["us-east-1a", "us-east-1b"]
public_subnets      = ["10.30.1.0/24", "10.30.2.0/24"]
private_subnets     = ["10.30.11.0/24", "10.30.12.0/24"]

api_domain = "sports-stg-api.your-domain.com"
route53_zone_id = "Z1234567890"
acm_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/replace-with-your-cert-id"

image_tag = "latest"

mongo_uri_secret_name = "as-stg-mongo-uri"

database_names = {
  "identity-service"             = "as-stg-identity"
  "enrollment-service"           = "as-stg-enrollment"
  "department-service"           = "as-stg-department"
  "sports-participation-service" = "as-stg-sports-part"
  "event-configuration-service"  = "as-stg-event-config"
  "scheduling-service"           = "as-stg-scheduling"
  "scoring-service"              = "as-stg-scoring"
  "reporting-service"            = "as-stg-reporting"
}

jwt_secret_name = "as-stg-jwt"
email_provider = "gmail"
gmail_user = "your-email@gmail.com"
gmail_app_password_secret_name = "as-stg-gmail-app-password"
sendgrid_api_key_secret_name = "as-stg-sendgrid-api-key"
resend_api_key_secret_name = "as-stg-resend-api-key"
smtp_password_secret_name = "as-stg-smtp-password"
email_from = "no-reply@your-domain.com"
